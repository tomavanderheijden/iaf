<module>
	<adapter name="HelloWorld" description="My example adapter to generate documentation about." active="${HelloWorld.active}">
		<receiver
			name="HelloWorld"
			className="nl.nn.adapterframework.receivers.GenericReceiver"
			>
			<listener 
				className="nl.nn.adapterframework.http.rest.ApiListener"
				uriPattern="NotifyMailProcessedForNavigator"
				method="POST"
				produces="XML"
			/>
<!-- 			<messageLog
				className="nl.nn.adapterframework.jdbc.DummyTransactionalStorage"
				jmsRealm="jdbc"
				slotId="${instance.name}/NotifyMailProcessedForNavigator_Action"/>
			<errorStorage
				className="nl.nn.adapterframework.jdbc.JdbcTransactionalStorage"
				jmsRealm="jdbc"
				slotId="${instance.name}/NotifyMailProcessedForNavigator_Action" /> -->
			<Documentation>Only exposed for internal adapters, meant as sub adapter.</Documentation>
		</receiver>
		<pipeline firstPipe="CreateMessage">
			<exits>
				<exit path="EXIT" state="success"/>
			</exits>
			<pipe
				name="CreateMessage"
				getInputFromFixedValue="&lt;dummy/&gt;"
				className="nl.nn.adapterframework.pipes.XsltPipe"
				styleSheetName="xsl/CreateMessage.xsl"
			>
				<forward name="success" path="HelloWorld"/>
			</pipe>
			<pipe
				name="HelloWorld"
				className="nl.nn.adapterframework.pipes.FixedResult"
				returnString="Hello World"
				>
				<forward name="success" path="EXIT"/>
			</pipe>
		</pipeline>
	</adapter>
	<scheduler>
		<job
			name="HelloWorld"
			adapterName="HelloWorld"
			receiverName="HelloWorld"
			interval="0"
			function="sendMessage"
			active="${HelloWorld.job.active}"
		/>
	</scheduler>
	<adapter name="HelloUniverse" active="${junit.active}">
		<receiver
			name="HelloUniverse"
			className="nl.nn.adapterframework.receivers.GenericReceiver"
			>
			<listener
				name="HelloUniverse"
				className="nl.nn.adapterframework.receivers.JavaListener"
			/>
			<errorStorage className="nl.nn.adapterframework.jdbc.JdbcTransactionalStorage"
				jmsRealm="jdbc" slotId="${instance.name}/HelloUniverse_In" />
		</receiver>
		<pipeline firstPipe="HelloUniverse">
			<exits>
				<exit path="EXIT" state="success"/>
			</exits>
			<pipe name="HelloUniverse"
				className="nl.nn.adapterframework.pipes.GenericMessageSendingPipe">
				<sender className="nl.nn.adapterframework.senders.FixedResultSender"
					returnString="Hello, Universe!" />
   				<messageLog className="nl.nn.adapterframework.jdbc.JdbcTransactionalStorage" 
					jmsRealm="jdbc" 
					slotId="${instance.name}/HelloUniverse_Out" />
				<forward name="success" path="EXIT" />
			</pipe>
		</pipeline>
	</adapter>
</module>
